<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets top="10" bottom="10" left="20" right="20"/>
	</padding>
	
	<center>
		<GridPane hgap="10" vgap="10">
			<children>
				<Label text="이름" prefWidth="50" GridPane.rowIndex="0"/>
				<Label text="국어" prefWidth="50" GridPane.rowIndex="1"/>
				<Label text="수학" prefWidth="50" GridPane.rowIndex="2"/>
				<Label text="영어" prefWidth="50" GridPane.rowIndex="3"/>
				<TextField prefWidth="100" GridPane.columnIndex="1" />
				<TextField prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
				<TextField prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
				<TextField prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
			</children>
		</GridPane>
	</center>
	
	<bottom>
		<HBox alignment="CENTER" spacing="20">
			<BorderPane.margin>
				<Insets top="20" bottom="10" />
			</BorderPane.margin>
			<children>
				<Button text="저장" />
				<Button id="btnFormCancel" text="취소" />
			</children>
		</HBox>
	</bottom>
</BorderPane>

